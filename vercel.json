{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/todos/(.*)",
      "dest": "/api/todos?id=$1"
    },
    {
      "src": "/api/todos",
      "dest": "/api/todos"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ],
  "functions": {
    "api/todos.js": {
      "maxDuration": 10
    }
  }
}
